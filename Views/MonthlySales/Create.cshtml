@model BlueMoonAdmin.Models.MonthlySales
@{
    ViewData["Title"] = "MonthlySales";
}

<div class="container-fluid">
    <h1 class="mt-4 p-2">Add new task item</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Add monthly sales figure</li>
    </ol>
</div>

<form method="post" asp-action="Create">
    <div class="container col-12 border-bottom">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row text-center">
                    <div class="col-2">
                        <label asp-for="StartDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="EndDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Amount"></label>
                    </div>

                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col-2">
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row p-3">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Add Monthly Sales Figure" />
                            </div>
                            <div class="col">
                                <a asp-action="MonthlySales" class="btn btn-green w-75">Go Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

</form>

