@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LoginLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-center bg-primary">
                    <a href="#">
                        <img class="block-center rounded" src="~/img/logo.png" alt="Image" />
                    </a>
                </div>
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-3">Create Account</h3>
                </div>
                <div class="card-body">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" asp-action="Register" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="FirstName">First Name</label>
                                    <input class="form-control py-4" asp-for="FirstName" placeholder="Enter first name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="LastName">Last Name</label>
                                    <input class="form-control py-4" asp-for="LastName" placeholder="Enter last name" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email">Email</label>
                            <input class="form-control py-4" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email address" />
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="RoleName">Please Select Role</label>
                            <select class="form-control py-2" asp-for="RoleName" asp-items="@BlueMoonAdmin.Utility.Helper.GetRolesForDropDown()"></select>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="Password">Password</label>
                                    <input class="form-control py-4" asp-for="Password" placeholder="Enter password" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="ConfirmPassword">Confirm Password </label>
                                    <input class="form-control py-4" asp-for="ConfirmPassword" placeholder="Confirm password" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4 mb-0">
                            <button class="btn btn-primary btn-block" type="submit"> Create Account</button>
                        </div>
                    </form>
                    <p class="pt-3 text-center">Already have an account?</p>
                    <div class="form-group">
                        <p>
                            <a class="btn btn-light w-100" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Sign In</a>
                        </p>
                    </div>
                </div>
                @*<div class="card-footer text-center">
                    <div class="small">
                        <a asp-action="Login">Have an account? Go to login</a>
                    </div>
                </div>*@
            </div>
        </div>
    </div>
</div>
<div class="p-3 text-center">
    <span>BlueMoonCRM</span>
    <br />
    <span>We're not really here</span>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
